@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <p class="nav-link text-dark">Hello @User.Claims.SingleOrDefault(c => c.Type == "name").Value!</p>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-controller="Account" asp-action="SignOut" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{    
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-controller="Account" asp-action="SignIn" asp-route-returnUrl="@Context.Request.PathBase@Context.Request.Path">Login</a>
    </li>
}
</ul>